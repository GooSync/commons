<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


	<style name="TestStyle">
		<item name="android:inputType">text</item>
		<item name="highLightColor">@color/sdk_input_highlight</item>
		<item name="errorColor">@color/sdk_input_error</item>
		<item name="inputTextSize">@dimen/input_text_size</item>
		<item name="inputTextColor">@color/sdk_input</item>
		<item name="hintTextSize">@dimen/input_text_hint_size</item>
		<item name="hintTextColor">@color/sdk_input_highlight</item>
		<item name="labelTextSize">@dimen/input_text_label_size</item>
		<item name="labelTextColor">@color/sdk_input_hint</item>
	</style>

</resources>
